<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="#CDEBF3">

    <TextView
        android:id="@+id/officialpostlayout"
        android:layout_width="406dp"
        android:layout_height="62dp"
        android:layout_marginTop="15dp"
        android:background="#007F9F8B"
        android:fontFamily="serif"
        android:text="offcial post"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/officialnamelayout"
        android:layout_width="394dp"
        android:layout_height="51dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="#00D7EADE"
        android:fontFamily="serif"
        android:text="name"
        android:textColor="#000000"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/officialpostlayout" />

</androidx.constraintlayout.widget.ConstraintLayout>